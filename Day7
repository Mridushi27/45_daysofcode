# Define the number of test cases
T = int(input())

# Iterate through each test case
for _ in range(T):
    # Read the values of X and Y for the current test case
    X, Y = map(int, input().split())
    
    # Calculate the maximum number of people that can take a bath
    # using water from one completely filled geyser
    max_people = X // (2 * Y)
    
    # Print the result for the current test case
    print(max_people)
